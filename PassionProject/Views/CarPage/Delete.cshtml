@model PassionProject.Models.CarDto

<div class="container">

    <h2>Are you sure you want to delete this car?</h2>

    <div class="model-row">
        <strong>Make:</strong> <span class="model-value">@Model.Make</span>
    </div>
    <div class="model-row">
        <strong>Model:</strong> <span class="model-value">@Model.Model</span>
    </div>
    <div class="model-row">
        <strong>Year:</strong> <span class="model-value">@Model.Year</span>
    </div>
    <div class="model-row">
        <strong>Owner:</strong> <span class="model-value">@Model.OwnerName</span>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.CarId">
        <input type="hidden" asp-for="CarId" />
        <div class="button-container">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="List" class="btn btn-secondary">Back</a>
        </div>
    </form>

</div>

<style>
    body {
        background-color: #ffffff;
        color: #343a40;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #d9534f;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        color: #343a40;
    }

    .form-control {
        background-color: #ffffff;
        color: #495057;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            background-color: #ffffff;
            border-color: #d9534f;
        }

    .text-danger {
        font-size: 0.9rem;
    }

    .btn {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-primary {
        background-color: #28a745;
    }

        .btn-primary:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #bdc3c7;
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            transform: translateY(-2px);
        }
</style>

