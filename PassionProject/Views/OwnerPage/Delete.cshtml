@model PassionProject.Models.OwnerDto

<div class="container">
    <h2>Are you sure you want to delete this owner?</h2>

    <div class="model-row">
        <strong>Owner ID:</strong> <span class="model-value">@Model.OwnerId</span>
    </div>
    <div class="model-row">
        <strong>First Name:</strong> <span class="model-value">@Model.FirstName</span>
    </div>
    <div class="model-row">
        <strong>Last Name:</strong> <span class="model-value">@Model.LastName</span>
    </div>
    <div class="model-row">
        <strong>Contact:</strong> <span class="model-value">@Model.Contact</span>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.OwnerId" />
        <div class="button-container">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="List" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>


