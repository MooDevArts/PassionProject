@model IEnumerable<PassionProject.Models.StaffDto>

@{
    ViewData["Title"] = "Staff List";
}

<div class="container">
    <h1 class="my-4 text-center">Staff List</h1>

    <div class="row mb-4">
        <div class="col-md-6 text-center mb-2">
            <a asp-controller="TaskPage" asp-action="List" class="btn btn-task-list btn-lg">
                <i class="fas fa-tasks"></i> List All Tasks
            </a>
        </div>
        <div class="col-md-6 text-center mb-2">
            <a asp-controller="TaskPage" asp-action="New" class="btn btn-add-task btn-lg">
                <i class="fas fa-plus"></i> Add New Task
            </a>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card card-hover shadow-sm border-light">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</h5>
                            <p class="card-text">Position: <strong>@Html.DisplayFor(modelItem => item.Position)</strong></p>
                            <p class="card-text">Contact: <strong>@Html.DisplayFor(modelItem => item.Contact)</strong></p>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Edit" asp-route-id="@item.StaffId" class="btn btn-edit">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.StaffId" class="btn btn-details">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.StaffId" class="btn btn-delete">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center">No staff available.</div>
            </div>
        }
    </div>

    <div class="text-center mb-3">
        <a asp-action="New" asp-route-id="New" class="btn btn-add btn-lg">Add New Staff</a>
    </div>
</div>

<style>
    body {
        background-color: #ffffff;
        color: #333333;
    }

    .title-glow {
        font-size: 4rem;
        font-weight: bold;
        color: #333333;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.8), 0 0 20px rgba(255, 255, 255, 0.6);
    }

    .card-hover {
        transition: transform 0.3s ease, background-color 0.3s ease, color 0.3s ease;
        background-color: #f8f9fa;
        color: #333333;
        border: 1px solid #e0e0e0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

        .card-hover:hover {
            transform: scale(1.05);
            z-index: 1;
            background-color: #e9ecef;
            color: #333333;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333333;
    }

    .card-text {
        font-size: 1rem;
        color: #555555;
    }

    .btn {
        color: #fff;
        border: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        opacity: 0.99;
    }

        .btn:hover {
            opacity: 1;
        }

    .btn-edit {
        background-color: rgba(0, 123, 255, 0.7);
    }

        .btn-edit:hover {
            background-color: rgba(0, 86, 179, 0.9);
            transform: translateY(-2px);
        }

    .btn-details {
        background-color: rgba(40, 167, 69, 0.7);
    }

        .btn-details:hover {
            background-color: rgba(34, 139, 56, 0.9);
            transform: translateY(-2px);
        }

    .btn-delete {
        background-color: rgba(220, 53, 69, 0.7);
    }

        .btn-delete:hover {
            background-color: rgba(200, 35, 51, 0.9);
            transform: translateY(-2px);
        }

    .btn-add {
        background-color: rgba(23, 162, 184, 0.7);
    }

        .btn-add:hover {
            background-color: rgba(19, 132, 150, 0.9);
            transform: translateY(-2px);
        }

    .btn-task-list {
        background-color: rgba(111, 66, 193, 0.7);
    }

        .btn-task-list:hover {
            background-color: rgba(91, 46, 173, 0.9);
            transform: translateY(-2px);
        }

    .btn-add-task {
        background-color: rgba(253, 126, 20, 0.7);
    }

        .btn-add-task:hover {
            background-color: rgba(233, 106, 0, 0.9);
            transform: translateY(-2px);
        }

    .container {
        margin-top: 30px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .col-md-4 {
        flex: 1 1 calc(33.333% - 20px);
        max-width: calc(33.333% - 20px);
    }

    .d-flex {
        display: flex;
        justify-content: space-between;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .fa {
        margin-right: 5px;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}