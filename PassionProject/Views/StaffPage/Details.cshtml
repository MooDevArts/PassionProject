@model PassionProject.Models.StaffDto

<div class="container">
    <h1>Staff Details</h1>

    <div class="flex-container">
        <div class="personal-info">
            <div class="card-body">
                <h4>Personal Information</h4>
                <div class="model-row">
                    <strong>First Name:</strong> <span class="model-value">@Model.FirstName</span>
                </div>
                <div class="model-row">
                    <strong>Last Name:</strong> <span class="model-value">@Model.LastName</span>
                </div>
                <div class="model-row">
                    <strong>Position:</strong> <span class="model-value">@Model.Position</span>
                </div>
                <div class="model-row">
                    <strong>Contact:</strong> <span class="model-value">@Model.Contact</span>
                </div>
            </div>
        </div>

        <div class="managed-cars">
            <div class="card-body">
                <h4>Managed Cars</h4>
                <div class="car-list">
                    @foreach (var car in Model.Cars)
                    {
                        <div class="car-item">
                            <div class="model-row">
                                <strong>Car ID:</strong> <span class="model-value">@car.CarId</span>
                            </div>
                            <div class="model-row">
                                <strong>Make:</strong> <span class="model-value">@car.Make</span>
                            </div>
                            <div class="model-row">
                                <strong>Model:</strong> <span class="model-value">@car.Model</span>
                            </div>
                            <div class="model-row">
                                <strong>Year:</strong> <span class="model-value">@car.Year</span>
                            </div>
                            <div class="model-row">
                                <strong>Owner:</strong> <span class="model-value">@car.OwnerName</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 button-container">
        <a asp-action="Edit" asp-route-id="@Model.StaffId" class="btn btn-primary">Edit</a>
        <a asp-action="List" class="btn btn-secondary btn-small">Back to List</a>
    </div>
</div>
<style>
    body {
        background-color: #ffffff;
        color: #343a40;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #d9534f;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        color: #343a40;
    }

    .form-control {
        background-color: #ffffff;
        color: #495057;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            background-color: #ffffff;
            border-color: #d9534f;
        }

    .text-danger {
        font-size: 0.9rem;
    }

    .btn {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-primary {
        background-color: #28a745;
    }

        .btn-primary:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #bdc3c7;
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            transform: translateY(-2px);
        }
</style>
