@model PassionProject.Models.StaffDto

<div class="container">
    <h1>Staff Details</h1>

    <div class="flex-container">
        <div class="personal-info">
            <div class="card-body">
                <h4>Personal Information</h4>
                <div class="model-row">
                    <strong>First Name:</strong> <span class="model-value">@Model.FirstName</span>
                </div>
                <div class="model-row">
                    <strong>Last Name:</strong> <span class="model-value">@Model.LastName</span>
                </div>
                <div class="model-row">
                    <strong>Position:</strong> <span class="model-value">@Model.Position</span>
                </div>
                <div class="model-row">
                    <strong>Contact:</strong> <span class="model-value">@Model.Contact</span>
                </div>
            </div>
        </div>

        <div class="managed-cars">
            <div class="card-body">
                <h4>Managed Cars</h4>
                <div class="car-list">
                    @foreach (var car in Model.Cars)
                    {
                        <div class="car-item">
                            <div class="model-row">
                                <strong>Car ID:</strong> <span class="model-value">@car.CarId</span>
                            </div>
                            <div class="model-row">
                                <strong>Make:</strong> <span class="model-value">@car.Make</span>
                            </div>
                            <div class="model-row">
                                <strong>Model:</strong> <span class="model-value">@car.Model</span>
                            </div>
                            <div class="model-row">
                                <strong>Year:</strong> <span class="model-value">@car.Year</span>
                            </div>
                            <div class="model-row">
                                <strong>Owner:</strong> <span class="model-value">@car.OwnerName</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 button-container">
        <a asp-action="Edit" asp-route-id="@Model.StaffId" class="btn btn-primary">Edit</a>
        <a asp-action="List" class="btn btn-secondary btn-small">Back to List</a>
    </div>
</div>


