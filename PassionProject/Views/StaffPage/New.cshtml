@model PassionProject.Models.StaffDto

@{
    ViewData["Title"] = "Add New Staff Member";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Position" class="control-label"></label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Contact" class="control-label"></label>
            <input asp-for="Contact" class="form-control" />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Cars</label>
            @if (Model.Cars != null && Model.Cars.Any())
            {
                <select asp-for="Cars" class="form-control" multiple="multiple" name="Cars">
                    @foreach (var car in Model.Cars)
                    {
                        <option value="@car.CarId">@car.Make - @car.Model (@car.Year)</option>
                    }
                </select>
            }
            else
            {
                <p>No cars available.</p>
            }
            <span asp-validation-for="Cars" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create Staff</button>
        </div>
    </form>
    <div class="mt-3">
        <a asp-action="List" class="btn btn-secondary">Back</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #ffffff;
        color: #343a40;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #d9534f;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        color: #343a40;
    }

    .form-control {
        background-color: #ffffff;
        color: #495057;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            background-color: #ffffff;
            border-color: #d9534f;
        }

    .text-danger {
        font-size: 0.9rem;
    }

    .btn {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn-primary {
        background-color: #28a745;
    }

        .btn-primary:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background-color: #bdc3c7;
    }

        .btn-secondary:hover {
            background-color: #95a5a6;
            transform: translateY(-2px);
        }
</style>
