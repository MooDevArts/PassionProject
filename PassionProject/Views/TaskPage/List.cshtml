@model IEnumerable<WorkTaskDto>
@{
    ViewData["Title"] = "Task List";
}

<h2>Task List</h2>

<p>
    <a asp-action="New">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Description</th>
            <th>Assigned Staff</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TaskName</td>
                <td>@item.Description</td>
                <td>
                    @if (ViewBag.AssignedStaffs.ContainsKey(item.id))
                    {
                        @string.Join(", ", ViewBag.AssignedStaffs[item.id])
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

