@model AssignStaffViewModel
@{
    ViewData["Title"] = "Assign Staff to Task";
}

<h2>Assign Staff to @Model.TaskName</h2>

<form asp-action="AssignStaffToTask" method="post">
    <input type="hidden" name="taskId" value="@Model.TaskId" />
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Name</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model.AvailableStaffs)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="SelectedStaffIds" value="@staff.StaffId" />
                    </td>
                    <td>@staff.FirstName @staff.LastName</td>
                    <td>@staff.Position</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Assign Selected</button>
</form>

<div>
    <a asp-action="TaskStaff" asp-route-taskId="@Model.TaskId">Back to Staff List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

